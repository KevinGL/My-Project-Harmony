<form action="/update" method="post">
    <input type="text" placeholder="Name of user" name="name" />
    <input type="text" placeholder="Email of user" name="email" />
    <input type="password" placeholder="Password" name="password" />
    <input type="textarea" placeholder="Description of user" name="description" />
    <input type="radio" name="admin" value="1" />
    Admin
    <input type="radio" name="admin" value="0" />
    Non admin
    <input type="submit" />
</form>